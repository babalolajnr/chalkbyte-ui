{
	"name": "chalkbyte-ui",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test --project=chromium --grep-invert=\"Visual Regression\"",
		"test:cleanup": "node scripts/cleanup-snapshots.js",
		"test:e2e:ui": "playwright test --ui --project=chromium",
		"test:e2e:headed": "playwright test --headed --project=chromium",
		"test:e2e:debug": "playwright test --debug --project=chromium",
		"test:e2e:chromium": "playwright test --project=chromium",
		"test:e2e:all": "playwright test",
		"test:e2e:report": "playwright show-report",
		"test:e2e:codegen": "playwright codegen http://localhost:5173",
		"test:e2e:update-snapshots": "playwright test --update-snapshots --project=chromium",
		"test:e2e:clean": "npm run test:cleanup"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.2",
		"@internationalized/date": "^3.10.1",
		"@lucide/svelte": "^0.561.0",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@tanstack/table-core": "^8.21.3",
		"@types/node": "^22.19.3",
		"@vitest/browser-playwright": "^4.0.16",
		"bits-ui": "^2.15.2",
		"clsx": "^2.1.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"formsnap": "^2.0.1",
		"globals": "^16.5.0",
		"playwright": "^1.57.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.46.1",
		"svelte-check": "^4.3.5",
		"svelte-sonner": "^1.0.7",
		"sveltekit-superforms": "^2.29.1",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.51.0",
		"vite": "^7.3.0",
		"vitest": "^4.0.16",
		"vitest-browser-svelte": "^2.0.1"
	},
	"dependencies": {
		"@tanstack/svelte-query": "^6.0.14",
		"mode-watcher": "^1.1.0",
		"zod": "^4.3.5"
	}
}
